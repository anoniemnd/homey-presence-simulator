{
  "_comment": "This file is generated. Please edit .homeycompose/app.json instead.",
  "id": "com.simulator.presence",
  "version": "0.0.3",
  "compatibility": ">=5.0.0",
  "sdk": 3,
  "platforms": [
    "local"
  ],
  "name": {
    "en": "Presence Simulator",
    "nl": "Aanwezigheidssimulator"
  },
  "description": {
    "en": "Simulate presence by automatically replaying your lighting patterns from a week ago",
    "nl": "Simuleer aanwezigheid door verlichtingspatronen van een week geleden automatisch te herhalen"
  },
  "category": [
    "tools"
  ],
  "permissions": [
    "homey:manager:api"
  ],
  "brandColor": "#00A0D2",
  "author": {
    "name": "Anoniemand",
    "email": "github@anoniemand.com"
  },
  "images": {
    "small": "assets/images/small.jpg",
    "large": "assets/images/large.jpg"
  },
  "source": "https://github.com/anoniemnd/homey-presence-simulator",
  "bugs": {
    "url": "https://github.com/anoniemnd/homey-presence-simulator/issues"
  },
  "api": {
    "getDevices": {
      "method": "GET",
      "path": "/devices"
    },
    "getEvents": {
      "method": "GET",
      "path": "/events"
    },
    "getLogs": {
      "method": "GET",
      "path": "/logs"
    },
    "trackDevice": {
      "method": "POST",
      "path": "/track"
    },
    "untrackDevice": {
      "method": "POST",
      "path": "/untrack"
    },
    "clearHistory": {
      "method": "POST",
      "path": "/clear-history"
    },
    "reloadSettings": {
      "method": "POST",
      "path": "/reload-settings"
    },
    "testLog": {
      "method": "POST",
      "path": "/test-log"
    },
    "generateTestData": {
      "method": "POST",
      "path": "/generate-test-data"
    }
  },
  "flow": {
    "conditions": [
      {
        "id": "precense_simulator_is_enabled",
        "type": "condition",
        "invertible": true,
        "title": {
          "nl": "Aanwezigheids simulator is !{{ingeschakeld|uitgeschakeld}}",
          "en": "Presence simulator is !{{enabled|disabled}}"
        }
      }
    ],
    "actions": [
      {
        "title": {
          "en": "Disable precense simulator",
          "nl": "Schakel aanwezigheids simulator uit"
        },
        "id": "disable_precense_simulator"
      },
      {
        "title": {
          "en": "Enable precense simulator",
          "nl": "Schakel aanwezigheids simulator in"
        },
        "id": "enable_precense_simulator"
      }
    ]
  }
}